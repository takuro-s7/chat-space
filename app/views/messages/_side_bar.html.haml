.SidBer
  .LeftHeader
    .LeftHeader__list
      %h3.LeftHeader__UserName 
        = current_user.name
      %ul.LeftHeader__IconList   
        %li.LeftHeader__IconEdit
          = link_to new_group_path(current_user) do 
            = icon('fas', 'edit')
        %li.LeftHeader__IconCog
          = link_to edit_user_path(current_user) do 
            = icon('fas', 'cog') 
  .GroupList
    - current_user.groups.each do |group|
      .Group  
        = link_to group_messages_path(group) do 
          .GroupName
            = group.name  
          .GroupMessage
            = group.show_last_message
      
         